<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.capstonedesign.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/cameraFragment"
        android:name="com.example.capstonedesign.ui.fragment.CameraFragment"
        android:label="fragment_camera"
        tools:layout="@layout/fragment_camera" >
        <action
            android:id="@+id/action_cameraFragment_to_cameraResultFragment"
            app:destination="@id/cameraResultFragment" />
        <action
            android:id="@+id/action_cameraFragment_self"
            app:destination="@id/cameraFragment" />
    </fragment>
    <fragment
        android:id="@+id/searchFragment"
        android:name="com.example.capstonedesign.ui.fragment.SearchFragment"
        android:label="fragment_search"
        tools:layout="@layout/fragment_search" >
        <action
            android:id="@+id/action_searchFragment_to_itemDetailFragment"
            app:destination="@id/itemDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/cameraResultFragment"
        android:name="com.example.capstonedesign.ui.fragment.CameraResultFragment"
        android:label="fragment_camera_result"
        tools:layout="@layout/fragment_camera_result" />
    <fragment
        android:id="@+id/itemDetailFragment"
        android:name="com.example.capstonedesign.ui.fragment.ItemDetailFragment"
        android:label="fragment_item_detail"
        tools:layout="@layout/fragment_item_detail" >
        <argument
            android:name="item"
            app:argType="com.example.capstonedesign.data.response.SearchItem" />
    </fragment>
    <fragment
        android:id="@+id/mypageFragment"
        android:name="com.example.capstonedesign.ui.fragment.MypageFragment"
        android:label="fragment_mypage"
        tools:layout="@layout/fragment_mypage" />
</navigation>